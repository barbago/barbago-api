{
  "emulators": {
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  },
  "functions": {
    "source": "./",
    "predeploy": ["npm run build"]
  },
  "hosting": [
    {
      "target": "api-dev",
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    },
    {
      "target": "api-docs",
      "public": "docs",
      "predeploy": ["npm run docs"],
      "rewrites": [
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "/api/**",
          "function": "api"
        }
      ],
      "cleanUrls": "true",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "trailingSlash": false
    }
  ]
}
